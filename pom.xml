            <!-- TEST -->
            <dependency>
                <groupId>com.ninja-squad</groupId>
                <artifactId>DbSetup</artifactId>
                <version>${version.ninja.squad}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.orbisgis</groupId>
