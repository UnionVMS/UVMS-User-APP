    <groupId>eu.europa.ec.fisheries.uvms.user</groupId>
    <artifactId>user</artifactId>
    <version>${uvms.user.module.version}</version>
    <packaging>pom</packaging>

    <properties>
        <uvms.commons.version>${uvms.commonsLibrary.version}</uvms.commons.version>
        <uvms-pom-deps.version>1.21</uvms-pom-deps.version>

        <junit.version>4.10</junit.version>
        <mockito.version>1.9.5</mockito.version>
        <javaee.version>8.0</javaee.version>
        <swagger.version>1.3.1</swagger.version>
        <jersey.version>1.16</jersey.version>
        <uvms.logger.version>1.2.0</uvms.logger.version>
        <hibernate.version>5.3.17.Final</hibernate.version>
        <postgres.version>42.2.18</postgres.version>
        <version.ninja.squad>2.1.0</version.ninja.squad>
        <lombok.version>1.16.18</lombok.version>
        <mapstruct.version>1.3.1.Final</mapstruct.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
        </dependency>
        <dependency>
            <groupId>fish.focus.uvms.maven</groupId>
            <artifactId>uvms-pom-arquillian-deps</artifactId>
            <type>pom</type>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>sun.jdk</groupId>
                    <artifactId>jconsole</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!--<dependency>-->
            <!--<groupId>fish.focus.uvms.maven</groupId>-->
            <!--<artifactId>uvms-pom-gis-deps</artifactId>-->
            <!--<version>${uvms-pom-deps.version}</version>-->
            <!--<type>pom</type>-->
