<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>eu.europa.ec.mare.usm.information.entity.UserEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.UserContextEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.ScopeEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.RoleEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.PreferenceEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.PolicyEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.PersonEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.PendingDetailsEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.PasswordHistEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.OrganisationEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.OptionEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.FeatureEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.EndPointEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.EndPointContactEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.DatasetEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.ChannelEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.ChallengeEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.ApplicationEntity</class>
		<class>eu.europa.ec.mare.usm.information.entity.AbstractAuditedEntity</class>

		<properties>
			<property name="hibernate.default_schema" value="usm" />
			<property name="hibernate.id.new_generator_mappings" value="true" />
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="hibernate.connection.url" value="jdbc:h2:mem:testdb;INIT=CREATE SCHEMA IF NOT EXISTS usm;DATABASE_TO_UPPER=false;TRACE_LEVEL_SYSTEM_OUT=2;" />
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="show_sql" value="true" />
			<property name="format_sql" value="true" />
			<property name="use_sql_comments" value="true" />
		</properties>
	</persistence-unit>
</persistence>
